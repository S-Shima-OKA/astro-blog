---
import Heading from '../components/Heading.astro';
const {
    link = '#',
    titleLv = 3,
    titleText,
    imgSrc,
    altText,
    postDate,
    postTags = []
    } = Astro.props;
---
<div class="c-card p-type-">
    <a href={link} class="c-card-wrap">
        <Heading headingLv={titleLv} text={titleText} />
        <img src={imgSrc} alt={altText} />
        <p><span>{postDate}</span></p>
        <ul class="c-tag-list">
            {
                postTags.map((tag) => (
                    <li class="bulma-tag bulma-is-primary bulma-is-light"><a href={tag.link}>{tag.name}</a></li>
                ))
            }
        </ul>
    </a>
</div>