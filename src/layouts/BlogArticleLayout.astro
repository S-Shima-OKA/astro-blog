---
const { frontmatter } = Astro.props;
import Layout from '../layouts/Layout.astro';
import Heading from '../components/Heading.astro';
import Breadcrumbs from "../components/Breadcrumbs.astro";
---
<Layout 
	pageTitle={frontmatter.title}
	metaDesc={frontmatter.description}
	contentType={'blog'}
	isArticle={true}
>
	<div class="bulma-hero bulma-is-medium bulma-is-primary">
		<div class="bulma-hero-body">
			<Heading text={frontmatter.title} />
		</div>
	</div>
	<article class="bulma-content bulma-box">
		<Breadcrumbs current={frontmatter.title} />
		<slot />
	</article>
</Layout>
