---
import Header from '../components/Header.astro';
import Container from '../components/Container.astro';
import Footer from '../components/Footer.astro';
const { 
	pageTitle = '',
	metaDesc,
} = Astro.props;
---
<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content={metaDesc == '' ? 'モダンフロントエンドについて日々勉強しています。' : `${metaDesc}` }>
		<meta name="generator" content={Astro.generator} />
		<title>
			{pageTitle == '' ? 'Tech Study Blog - テクスタ' : `${pageTitle} | Tech Study Blog - テクスタ`}
		</title>
	</head>
	<body>
		<Header />
		<Container>
			<slot />
		</Container>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
